<section class="content-header header-resize">
  <%- model_class = Franchise -%>
  <h1>
    <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
    <%#= link_to 'New Station',
                new_admin_franchise_path,
                :class => 'btn btn-sm btn-success' %>
  </h1>
  <!--<ol class="breadcrumb">-->
    <!--<li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>-->
    <!--<li><a href="#">Tables</a></li>-->
    <!--<li class="active">Simple</li>-->
  <!--</ol>-->
</section>

<div class="col-xs-12">
  <div class="box top-margin">
    <div class="box-header">
      <h3 class="box-title">All Franchises</h3>

      <!--<div class="box-tools">-->
      <!--<div class="input-group input-group-sm" style="width: 150px;">-->
      <!--<input type="text" name="table_search" class="form-control pull-right" placeholder="Search">-->

      <!--<div class="input-group-btn">-->
      <!--<button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>-->
      <!--</div>-->
      <!--</div>-->
      <!--</div>-->
    </div>
    <!-- /.box-header -->

    <div class="box-body table-responsive no-padding">
      <table class="table table-border">
        <tbody><tr>
          <th class="table-header-row"><%= model_class.human_attribute_name(:id) %></th>
          <th class="table-header-row"><%= model_class.human_attribute_name(:name) %></th>
          <th class="table-header-row"><%= model_class.human_attribute_name(:rank) %></th>
          <th class="table-header-row"><%= model_class.human_attribute_name(:is_client) %></th>
          <th class="table-header-row"><%= model_class.human_attribute_name(:website) %></th>
          <th class="table-header-row"><%= model_class.human_attribute_name(:logo) %></th>
          <th class="table-header-row"><%= model_class.human_attribute_name(:initial_investment) %></th>
          <th class="table-header-row"><%#= model_class.human_attribute_name(:category_labels) %></th>
          <th class="table-header-row"><%#= model_class.human_attribute_name(:chain_name) %></th>
          <th class="table-header-row"><%#= model_class.human_attribute_name(:created_at) %></th>
          <th class="table-header-row"><%=t '.actions', :default => t('helpers.actions') %></th>
        </tr>

        <% @franchises.each do |franchise| %>
            <tr>
              <td><%= link_to franchise.id,  admin_franchise_path(franchise) %></td>
              <td><%= franchise.name %></td>
              <td><%= franchise.rank %></td>
              <td><span class="label label-<%= (franchise.is_client  ? 'success' : 'warning') %>"><%= (franchise.is_client  ? 'Yes' : 'No') %></span> </td>
              <td><%=  franchise.website.present? ? (link_to franchise.name,franchise.website, :target => '_blank') : '' %></td>
              <td><%= link_to(image_tag(franchise.logo.present? ?  franchise.logo_url(:thumb) : 'http://placehold.it/200x200', alt: "#{franchise.name}"), franchise.website, :target => '_blank') %></td>
              <td><%= franchise.initial_investment.present? ? franchise.initial_investment : 'N/A' %></td>
              <td><%#= franchise.chain_name %></td>
              <td><%#= franchise.chain_name %></td>
              <td><%#= (franchise.created_at).strftime('%a, %d %B, %Y') %></td>
              <td>
                <%= link_to t('.show', :default => t('helpers.links.show')),
                            admin_franchise_path(franchise), :class => 'btn btn-sm btn-success' %>
                <%= link_to t('.edit', :default => t('helpers.links.edit')),
                            edit_admin_franchise_path(franchise), :class => 'btn btn-sm btn-warning' %>
                <%= link_to 'All Locations', admin_franchise_all_locations_path(franchise.id), :class => 'btn btn-sm btn-success' %>
                <%#= link_to t('.destroy', :default => t('helpers.links.destroy')),
                            admin_franchise_path(franchise),
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t('helpers.links.confirm', :default => 'Are you sure?')) },
                            :class => 'btn btn-sm btn-danger' %>
              </td>
            </tr>
        <% end %>

        </tbody></table>
      <div class="pull-right"><strong><%= will_paginate @franchises %></strong></div>
    </div>
    <!-- /.box-body -->
  </div>
  <!-- /.box -->
</div>
